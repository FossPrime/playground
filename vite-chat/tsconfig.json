{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ES2022",
    "moduleResolution": "Node16",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2022", "DOM"],
    "skipLibCheck": true,
    "removeComments": false, // Remove if comfortable with TypeScript
  },
  "include": ["src/services/**/*.schema.ts"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "xxx-files": ["client.ts"]
}
