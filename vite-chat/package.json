{
  "name": "feathers-vite-chat",
  "description": "A FeathersJS real-time chat application written in TypeScript",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm run i && vite",
    "dev:client": "SKIP_SERVER=true vite",
    "dev:server": "tsx watch --clear-screen=false src/index.ts",
    "preview": "vite preview",
    "test:server": "npx typescript --noEmit && vitest run",
    "test:client": "npx typescript --noEmit",
    "build": "vite build --outDir dist/client",
    "start": "tsx src/index.ts",
    "update": "npx npm-check-updates -u",
    "i": "ls node_modules &> /dev/null || npm i",
    "switch-to-javascript-mode": "npx typescript -p tsconfig.node.json"
  },
  "type": "module",
  "homepage": "",
  "main": "src",
  "keywords": ["feathers"],
  "author": {
    "name": "David Luecke",
    "email": "daff@neyeon.com"
  },
  "contributors": [],
  "bugs": {},
  "directories": {
    "lib": "src",
    "test": "test/",
    "config": "config/"
  },
  "engines": {
    "node": ">= 16",
    "npm": ">= 7"
  },
  "imports": {
    "#src/*": "./src/*"
  },
  "dependencies": {
    "@feathersjs/authentication": "pre",
    "@feathersjs/authentication-local": "pre",
    "@feathersjs/authentication-oauth": "pre",
    "@feathersjs/client": "pre",
    "@feathersjs/configuration": "pre",
    "@feathersjs/errors": "pre",
    "@feathersjs/express": "pre",
    "@feathersjs/feathers": "pre",
    "@feathersjs/schema": "pre",
    "@feathersjs/socketio": "pre",
    "@seald-io/nedb": "^3.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "feathers-nedb": "^6.0.0",
    "helmet": "^5.1.0",
    "run": "^1.4.0",
    "socket.io-client": "^4.5.1",
    "test": "^3.2.1"
  },
  "devDependencies": {
    "@feathersjs/cli": "pre",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/jsonwebtoken": "^8.5.8",
    "isomorphic-git": "^1.19.1",
    "node-fetch": "^3.2.9",
    "tsx": "^3.9.0",
    "vite": "^3.0.2",
    "vitest": "^0.18.1"
  },
  "stackblitz": {
    "installDependencies": false
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
